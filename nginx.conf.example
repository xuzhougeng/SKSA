# Nginx configuration example for CHIL Analyzer
# Save this as /etc/nginx/sites-available/chil_analyzer
# and create symlink: sudo ln -s /etc/nginx/sites-available/chil_analyzer /etc/nginx/sites-enabled/

server {
    listen 80;
    server_name your-domain.com;  # Replace with your domain
    
    # Optional: Redirect HTTP to HTTPS
    # return 301 https://$server_name$request_uri;
    
    # Main application proxy
    location /chil_analyzer/ {
        proxy_pass http://127.0.0.1:50000/chil_analyzer/;
        proxy_set_header Host $host;
        proxy_set_header X-Real-IP $remote_addr;
        proxy_set_header X-Forwarded-For $proxy_add_x_forwarded_for;
        proxy_set_header X-Forwarded-Proto $scheme;
        
        # Increase timeout for BLAST analysis
        proxy_read_timeout 60s;
        proxy_connect_timeout 10s;
        proxy_send_timeout 10s;
        
        # Handle file uploads
        client_max_body_size 10M;
    }
    
    # Optional: Root redirect to analyzer
    location = / {
        return 301 /chil_analyzer/;
    }
    
    # Security headers
    add_header X-Content-Type-Options nosniff;
    add_header X-Frame-Options DENY;
    add_header X-XSS-Protection "1; mode=block";
    
    # Logging
    access_log /var/log/nginx/chil_analyzer_access.log;
    error_log /var/log/nginx/chil_analyzer_error.log;
}

